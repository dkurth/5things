{
    "name": "5things",
    "description": "5 Things Improv Game",
    "homepage": "http://5things.dx3x.com",
    "license": "https://creativecommons.org/licenses/by/4.0/",
    "authors": [],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.0",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.23",
        "tuupola/slim-basic-auth": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "FiveThings\\": "src/FiveThings/"
        }
    },    
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
